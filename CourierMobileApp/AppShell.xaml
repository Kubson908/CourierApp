<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourierMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CourierMobileApp"
    xmlns:view="clr-namespace:CourierMobileApp.View"
    xmlns:components="clr-namespace:CourierMobileApp.View.Components"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="#111516">

    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="Login"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="Login" />
    
    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />

    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="Schedule"
        ContentTemplate="{DataTemplate view:SchedulePage}"
        Route="Schedule" />

    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="Profile"
        ContentTemplate="{DataTemplate view:ProfilePage}"
        Route="Profile" />
    
    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="ChangePassword"
        ContentTemplate="{DataTemplate view:ChangePasswordPage}"
        Route="ChangePassword" />

</Shell>
