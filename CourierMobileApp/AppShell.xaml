<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourierMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CourierMobileApp"
    xmlns:view="clr-namespace:CourierMobileApp.View"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="#111516">
    
    <ShellContent Title="Loading"
                  Shell.NavBarIsVisible="False" 
                  ContentTemplate="{DataTemplate view:LoadingPage}" 
                  Route="Loading" />
    
    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="Login"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="Login" />
    
    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />

    <ShellContent
        Shell.NavBarIsVisible="False"
        Title="Schedule"
        ContentTemplate="{DataTemplate view:SchedulePage}"
        Route="Schedule" />

</Shell>
